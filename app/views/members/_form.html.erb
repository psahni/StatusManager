<%=form_tag '/members', {role: 'form'} do %>
	<div class='form-group'>
		<label for='member-name' class="control-label">Full Name:</label>
		<%=text_field_tag "member[name]", '', class: 'form-control', id: 'member-name', "ng-model" => 'member.name'%>
	</div>
	<div class='form-group'>
		<label for='member-email' class='control-label'>Email:</label>
		<%=text_field_tag 'member[email]', '', class: 'form-control', id: 'member-email', "ng-model" => 'member.email'%>
	</div>
<% end %>        